# ── NewsRoom Environment Variables ──
# Copy this to .env and fill in your values.

# Domain for your deployment (used by Caddy for auto-SSL)
DOMAIN=newsroom.m3media.com

# Database
DB_PASSWORD=changeme_in_production

# NextAuth
NEXTAUTH_URL=https://newsroom.m3media.com
NEXTAUTH_SECRET=generate-a-random-32-char-secret-here

# SMTP (email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM="NewsRoom <notifications@m3media.com>"

# Google Drive (shared image library)
GOOGLE_SERVICE_ACCOUNT_KEY=
GOOGLE_DRIVE_FOLDER_ID=

# Ghost CMS / WordPress targets are configured in the admin panel

# Cron Jobs
CRON_SECRET=generate-a-long-random-secret-here

# Umami Analytics
UMAMI_URL=https://your-umami-instance.com
UMAMI_LIZPEEK_WEBSITE_ID=
UMAMI_LIZPEEK_TOKEN=
UMAMI_JOEPAGS_WEBSITE_ID=
UMAMI_JOEPAGS_TOKEN=
UMAMI_ROGUERECAP_WEBSITE_ID=
UMAMI_ROGUERECAP_TOKEN=
