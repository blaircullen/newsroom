# Lightweight image for running migrations + seed
FROM node:20-alpine
RUN apk add --no-cache openssl
WORKDIR /app

COPY package.json package-lock.json* ./
COPY prisma ./prisma/

RUN npm ci --legacy-peer-deps --ignore-scripts
RUN npx prisma generate

# Install ts-node for seed script
RUN npm install -D typescript ts-node @types/node --legacy-peer-deps

COPY tsconfig.json ./

# Use migrate deploy (safe, non-destructive) instead of db push --accept-data-loss
CMD ["sh", "-c", "npx prisma migrate deploy && npx prisma db seed"]
